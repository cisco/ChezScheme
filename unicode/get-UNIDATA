#!/bin/bash
set -euo pipefail
cd "$(dirname "$0")/UNIDATA"

function fetch() {
  curl -fsSL "$1" > "$(basename "$1")" || ( echo "Failed to fetch $1"; exit 1 )
}

fetch https://www.unicode.org/Public/UCD/latest/ucd/CaseFolding.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/CompositionExclusions.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/DerivedCoreProperties.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/emoji/emoji-data.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/auxiliary/GraphemeBreakProperty.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/auxiliary/GraphemeBreakTest.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/NormalizationTest.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/PropList.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/SpecialCasing.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/UnicodeData.txt
fetch https://www.unicode.org/Public/UCD/latest/ucd/auxiliary/WordBreakProperty.txt
