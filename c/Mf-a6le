m = a6le
Cpu = X86_64

mdclib = -lm -ldl -lncurses -lrt -luuid
C = ${CC} ${CPPFLAGS} -m64 -msse2 -Wpointer-arith -Wall -Wextra -Werror -Wno-implicit-fallthrough -O2 ${CFLAGS}
o = o
mdsrc = i3le.c
mdobj = i3le.o

.SUFFIXES:
.SUFFIXES: .c .o

.c.o:
	$C -c -D${Cpu} -I${Include} -I../zlib $*.c

include Mf-base

${Kernel}: ${kernelobj} ../zlib/libz.a
	ld -melf_x86_64 -r -X -o ${Kernel} ${kernelobj} ../zlib/libz.a

${Scheme}: ${Kernel} ${Main}
	$C -rdynamic -o ${Scheme} ${Kernel} ${Main} ${mdclib} ${LDFLAGS}

../zlib/configure.log:
	(cd ../zlib; CFLAGS=-m64 ./configure --64)
